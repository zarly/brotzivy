{
    "name": "BROtzivy",
    "version": "1.0",
    "description": "БРОтзывы - отзывы для своих",
    "manifest_version": 2,
    "permissions":[
        "activeTab",
        "tabs"
    ],
    "browser_action": {
      "default_popup": "popup/index.html",
      "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "sandbox": {
        "pages": ["sandbox/index.html"]
    }
}